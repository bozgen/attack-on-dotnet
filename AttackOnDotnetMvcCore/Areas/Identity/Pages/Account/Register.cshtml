@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    ViewBag.PageName = "Register";
    ViewBag.UpperPageName = "Home";
    ViewBag.UpperRoute = "/Home";
}

<partial name="_Breadcrumbs">


<div class="container">
    <div class="col-md-5 m-auto">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="section-header mt-2">Create a new account</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="false" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="false" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-floating">
                @*<input asp-for="Input.CompanyID" class="form-control" aria-required="true" />*@
                <select asp-for="Input.CompanyID" class="form-control" aria-required="true">
                    <option value="-1">select a company</option>
                    @foreach(var c in Model._context.Company) {
                        <option value="@c.ID">@c.Name</option>
                    }
                </select>
                <label asp-for="Input.CompanyID">Company</label>
                <span asp-validation-for="Input.CompanyID" class="text-danger"></span>
            </div>
            
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            <a href="/Identity/Account/Login">Sign in</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
