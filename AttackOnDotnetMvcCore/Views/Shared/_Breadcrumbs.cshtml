@if(ViewBag.PageHeaderUrl == null){
    ViewBag.PageHeaderUrl = "/images/background.png";
}

<div class="breadcrumbs">
    <div class="page-header d-flex align-items-center" style="background-image: url('@ViewBag.PageHeaderUrl');">
        <div class="container position-relative">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-6 text-center">
                    <h2>@ViewBag.PageName</h2>
                    <p>@ViewBag.Explanation</p>
                </div>
            </div>
        </div>
    </div>
    <nav>
        <div class="container">
            <ol>
                <li><a href="@ViewBag.UpperRoute">@ViewBag.UpperPageName</a></li>
                <li>@ViewBag.PageName</li>
            </ol>
        </div>
    </nav>
</div><!-- End Breadcrumbs -->