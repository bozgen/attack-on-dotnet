@using AttackOnDotnetMvcCore.Models
@model Tuple<TestResult, Test>

@{
    ViewData["Title"] = "Details";
    ViewBag.PageName = "Test Results";
    ViewBag.Explanation = "Here is the details of your test results";
    ViewBag.UpperPageName = "Test Results";
    ViewBag.UpperRoute = "/TestResults/";
}

<partial name="_Breadcrumbs" />

<div class="container">
    <div>
        <h4 class="p-1 mt-3">Test Result Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Item2.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Item2.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Item1.TestDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Item1.TestDate)
            </dd>
            <dt class="col-sm-2">
                Result
            </dt>
            <dd class="col-sm-10">
                @(Model.Item1.Result ? "Secure" : "Vulnerable")
            </dd>
        </dl>
    </div>
    <div>
        <a class="p-4 px-2" asp-action="Index">Back to List</a>
    </div>
</div>