@model AttackOnDotnetMvcCore.Models.Test
@{
	ViewData["Title"] = "Test Result";
	ViewBag.PageName = "Device Secure";
	ViewBag.UpperPageName = "Tests";
	ViewBag.UpperRoute = "/Tests/";
}

<partial name="_Breadcrumbs" />

<div class="container">
	<h2 class="p-4 px-0 header">Your device is secure</h2>
	
	<p>Your device is secure against @Model.Name attacks.</p>

	<h5 class="mt-4">More about @Model.Name attacks</h5>
	<p>@Model.LongDescription</p>
	<a href="@Model.Url">Read More...</a>

	@if(Model.TechniqueID == 1113 && Model.Number == 6){
	<div class="p-5 px-0">
		<a class="btn btn-primary" href="/Tests/Cleanup/@Model.ID">Run Cleanup</a>
	</div>
	}

	<div class="p-5 px-0">
		<a asp-action="Index">Go to history</a>
	</div>
</div>