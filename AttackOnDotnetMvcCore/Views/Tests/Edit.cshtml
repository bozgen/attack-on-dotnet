@using AttackOnDotnetMvcCore.Models
@model Tuple<Test, List<Technique>, List<Platform>>

@{
    ViewData["Title"] = "Edit";
    ViewBag.PageName = "Edit Tests";
    ViewBag.UpperPageName = "Tests";
    ViewBag.UpperRoute = "/Tests/";
}

<partial name="_Breadcrumbs" />

<div class="container">
    <h4 class="mt-4">Edit Test</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Item1.ID" />
                <div class="form-group">
                    <label asp-for="Item1.TechniqueID" class="control-label"></label>
                    <select asp-for="Item1.TechniqueID" class="form-control">
                        <option value="-1">select a technique</option>
                        @foreach(var t in Model.Item2) {
                            <option value="@t.ID">@t.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Item1.TechniqueID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item1.SubTechniqueID" class="control-label"></label>
                    <input asp-for="Item1.SubTechniqueID" class="form-control" />
                    <span asp-validation-for="Item1.SubTechniqueID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item1.SubTechniqueName" class="control-label"></label>
                    <input asp-for="Item1.SubTechniqueName" class="form-control" />
                    <span asp-validation-for="Item1.SubTechniqueName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item1.Name" class="control-label"></label>
                    <input asp-for="Item1.Name" class="form-control" />
                    <span asp-validation-for="Item1.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item1.Number" class="control-label"></label>
                    <input asp-for="Item1.Number" class="form-control" />
                    <span asp-validation-for="Item1.Number" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item1.PlatformID" class="control-label"></label>
                    <select asp-for="Item1.PlatformID" class="form-control">
                        <option value="-1">select a platform</option>
                        @foreach(var p in Model.Item3) {
                            <option value="@p.ID">@p.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Item1.PlatformID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item1.ShortDescription" class="control-label"></label>
                    <input asp-for="Item1.ShortDescription" class="form-control" />
                    <span asp-validation-for="Item1.ShortDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item1.LongDescription" class="control-label"></label>
                    <input asp-for="Item1.LongDescription" class="form-control" />
                    <span asp-validation-for="Item1.LongDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item1.Url" class="control-label"></label>
                    <input asp-for="Item1.Url" class="form-control" />
                    <span asp-validation-for="Item1.Url" class="text-danger"></span>
                </div>
                <div class="form-group pt-4">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="p-4 px-2">
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
